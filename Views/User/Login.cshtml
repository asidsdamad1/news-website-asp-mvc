@model NewsWebsite.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đăng nhập</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Content/admin/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/admin/dist/css/adminlte.min.css">
</head>
<body style=" background-color: #343a40;">
<div class="container" style="position:absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); ">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">

                    <h5 class="card-title text-center">Đăng Nhập</h5>
                    <br/>
                    <div class="text-center text-danger">@ViewBag.Error</div>
                    <form class="form-signin" method="post">

                        <div class="form-label-group">
                            <label for="Username">User name</label><br/>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "UserName" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-label-group">

                            <label for="Password">Password</label><br/>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-group">
                            @*<input type="checkbox" class="custom-control-input" id="customCheck1">*@
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "" })
                            Remember me
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Đăng nhập</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ./wrapper -->
<!-- jQuery -->
<script src="~/Content/admin/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="~/Content/admin/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!-- jquery-validation -->
<script src="~/Content/admin/plugins/jquery-validation/jquery.validate.min.js"></script>
<script src="~/Content/admin/plugins/jquery-validation/additional-methods.min.js"></script>
<!-- AdminLTE App -->
<script src="~/Content/admin/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/Content/admin/dist/js/demo.js"></script>
<!-- Page specific script -->

</body>
</html>