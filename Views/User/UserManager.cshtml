@model IEnumerable<NewsWebsite.ViewModel.UserListModel>

@{ ViewBag.Title = "Tất cả bài viết ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; }
<link href="~/Content/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet" />
<div style="margin-top:10px;"></div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quản Lý Người Dùng</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">

                        <a href="/User/createUser" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <table id="lstUser" class="table table-bordered table-striped dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Tên hiển thị</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th>Số bài viết</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
            <tr>
                <td>
                    @item.username
                </td>
                <td>
                    @item.fullname
                </td>
                <td>
                    @item.role_name
                </td>
                <td>
                    <label class="switch">
                        <input onchange="changeStt(this)" type="checkbox" id="@item.user_id" @(item.status == true ? "checked" : "") class="success">
                        <span class="slider"></span>
                    </label>
                </td>
                <td>
                    <a href="/Admin/UserPost?id=@item.user_id" > @Html.DisplayFor(modelItem => item.post_count)</a>
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { username = item.username }, new { @class = "badge badge-primary" })

                </td>
            </tr>
}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Tên đăng nhập</th>
                            <th>Tên hiển thị</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th>Số bài viết</th>
                            <th>Hành động</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/bootstrap-notify.min.js"></script>
<script src="~/Content/admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Content/js/ListUser.js"></script>
