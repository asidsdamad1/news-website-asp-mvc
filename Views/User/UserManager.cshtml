@model IEnumerable<NewsWebsite.ViewModel.UserListModel>

@{
    ViewBag.Title = "Tất cả bài viết ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css" rel="stylesheet"/>
<div style="margin-top:10px;"></div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Quản Lý Người Dùng</h3>

                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">

                        <a href="/User/createUser" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm</a>
                    </div>
                </div>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <table id="lstUser" class="table table-bordered table-striped dt-responsive nowrap">
                    <thead>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Tên hiển thị</th>
                        <th>Vai trò</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Số bài viết</th>
                        <th>Hành động</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.username
                            </td>
                            <td>
                                @item.fullname
                            </td>
                            <td>
                                @item.role_name
                            </td> 
                            <td>
                                @item.email
                            </td>
                            <td>
                                <label class="switch">
                                    <input onchange="changeStt(this)" type="checkbox" id="@item.user_id" @(item.status ? "checked" : "") class="success">
                                    <span class="slider"></span>
                                </label>
                            </td>
                            <td>
                                <a href="/Admin/UserPost?id=@item.user_id"> @Html.DisplayFor(modelItem => item.post_count)</a>
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { item.username }, new { @class = "badge badge-primary" })
                                @{
                                    if (User.Identity.Name != item.username)
                                    {
                                        <a onclick="deleteConfirm(@item.user_id,'@item.username')" href="#" class="badge badge-danger">Xóa</a>
                                    }
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Tên đăng nhập</th>
                        <th>Tên hiển thị</th>
                        <th>Vai trò</th>
                        <th>Email</th>
                        <th>Trạng thái</th>
                        <th>Số bài viết</th>
                        <th>Hành động</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Bạn có muốn xóa người dùng ?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                Modal body..
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" id="deleteBtn" class="btn btn-danger">Xóa</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>
<script src="~/Scripts/bootstrap-notify.min.js"></script>
<script src="~/Content/admin/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="~/Content/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="~/Content/js/ListUser.js"></script>